{
  "coc.preferences.formatOnSaveFiletypes": ["ruby", "scss", "css", "markdown"],
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "html.format.enable": true,
  "tsserver.formatOnType": true,
  "coc.preferences.formatOnType": true,
  "prettier.disableSuccessMessage": true,
  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  "solargraph.autoformat": true,
  "solargraph.useBundler": true,
  "diagnostic.displayByAle": true,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        },
        "clang": {
          "extraArgs": [
            "-stdlib=libstdc++",
             "-isystem/usr/local/include",
             "-isystem/Library/Developer/CommandLineTools/usr/bin/../include/c++/v1",
             "-isystem/Library/Developer/CommandLineTools/usr/lib/clang/12.0.0/include",
             "-isystem/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include",
             "-isystem/Library/Developer/CommandLineTools/usr/include",
             "-isystem/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
          ],
          "resourceDir": "/Library/Developer/CommandLineTools/usr/lib/clang/12.0.0"
        }
      }
    }
  }
}
